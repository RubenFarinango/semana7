<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="semana7.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar - Eliminar" FontSize="24" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtnombre" Placeholder="Nombre" />
            <Entry x:Name="txtusuario" Placeholder="usuario"/>
            <Entry x:Name="txtcontrasena" Placeholder="Contrasena"/>


            <Button x:Name="btnactualizar" Text="Actualizar" Clicked="btnactualizar_Clicked" />
            <Button x:Name="btneliminar" Text="Eliminar" Clicked="btneliminar_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>