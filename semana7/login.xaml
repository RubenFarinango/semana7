<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="semana7.login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana Login" FontSize="24" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtusuario" Placeholder="Usuario"/>
            <Entry x:Name="txtcontrasema" Placeholder="Contraseña"/>
            <Button x:Name="btnIniciar" Text="Iniciar sesion" Clicked="btnIniciar_Clicked" />
            <Button x:Name="btnregistrar" Text="Registrar" Clicked="btnregistrar_Clicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>